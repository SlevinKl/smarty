<div class="container mb-5 p-5">
    <%= link_to :back, class:'btn-back' do %>
    <i class="fa-solid fa-angle-left"></i>
  <% end %>
    <div class="form-container mt-1">
      <h3>Informations:</h3>
      <%= simple_form_for(@event) do |f| %>
        <%= f.input :title, placeholder: "Ex: Albert" %>
        <%= f.input :venue, placeholder: "Ex: Paris" %>
        <%= f.input :address, placeholder: "Ex: Cow" %>
        <%= f.input :starts_at, html5: true %>
        <div class="div h-200">
          <%= f.input :category, collection: Event::CATEGORIES ,placeholder: "Ex: funny" %>
        </div>
        <%= f.submit 'Valid', class: 'btn-add-event'%>
      <% end %>
    </div>
</div>
