<div class="container my-5">


  <div class='d-flex justify-content-around align-items-center mb-5'>
    <h4> <small> <i class="fa-solid fa-arrow-left-long"></i> </small> May</h4>
    <h2><strong>June</strong></h2>
    <h4>July <small> <i class="fa-solid fa-arrow-right"></i> </small> </h4>
  </div>

  <div class="mb-5">
    <%= link_to "Add event", new_event_path, class: 'btn-add-event'%>
  </div>

  <% @events.each do |event| %>
    <ul>
      <div class="">
        <div class=''><%= link_to event_path(event) do %>
            <div class="event-planning-container">
              <div class='event-day'>
                <li><%= event.starts_at.day %></li>
              </div>
              <div class='event-info <%=event.category%>' >
                <li><strong><%= event.title %></strong> <small> - <%= event.venue %></small></li>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
</div>
